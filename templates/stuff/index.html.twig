{% extends 'base.html.twig' %}

{% block title %}Stuff index{% endblock %}

{% block body %}
    <h1>Stuff index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Url</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stuff in stuffs %}
            <tr>
                <td>{{ stuff.id }}</td>
                <td>{{ stuff.title }}</td>
                <td>{{ stuff.url }}</td>
                <td>{{ stuff.createdAt ? stuff.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ stuff.updatedAt ? stuff.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('stuff_show', {'id': stuff.id}) }}">show</a>
                    <a href="{{ path('stuff_edit', {'id': stuff.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('stuff_new') }}">Create new</a>
{% endblock %}
