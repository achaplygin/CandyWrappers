{% extends 'base.html.twig' %}

{% block title %}Hello {{ app.user.username ?? 'WTF?!' }}!{% endblock %}
{% block header %}<h3>Hello {{ app.user.username ?? 'WTF?!' }} âœ…</h3>{% endblock %}
{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        Here the list of our users:
        <ul>
            {% for user in user_list %}
                <li>
                    <b>{{ user.username }}</b> [
                    {% for role in user.roles %}
                        &nbsp;{{ role }}&nbsp;
                    {% endfor %}
                    ]
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
